{
  "schemaVersion": 1,
  "id": "pfti",
  "version": "${version}",
  "name": "Pets from the inventory",
  "description": "pfti (Pets from the inventory) is a mod which adds pets which are accessible from the inventory",
  "authors": [
    "JoostMSoftware"
  ],
  "contact": {
    "repo": "https://github.com/JoostMSoftware/pfti"
  },
  "license": "LGPL-3.0",
  "icon": "assets/pfti/icon.png",
  "environment": "*",
  "entrypoints": {
    "client": [
      "com.joostmsoftware.pfti.client.PftiClient"
    ],
    "main": [
      "com.joostmsoftware.pfti.Pfti"
    ],
    "fabric-datagen": [
      "com.joostmsoftware.pfti.common.registry.datagen.PftiDatagenEntrypoint"
    ],
    "modmenu": [
      "com.joostmsoftware.pfti.core.compat.modmenu.ModMenuCompatPfti"
    ]
  },
  "mixins": [
    "pfti.mixins.json"
  ],
  "accessWidener": "pfti.accesswidener",
  "depends": {
    "fabricloader": ">=0.14.12",
    "fabric": "*",
    "minecraft": ">=1.18.2",
    "cloth-config": ">=6.4.90"
  }
}
